<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">

    <!-- Logo UTEQ -->
    <ImageView
        android:id="@+id/ivLogoUteq"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:contentDescription="Logo UTEQ"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_uteq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivLogoCircular"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Logo circular -->
    <ImageView
        android:id="@+id/ivLogoCircular"
        android:layout_width="210dp"
        android:layout_height="223dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Logo Circular"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_circular"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoUteq" />

    <!-- Botón Ingresar -->

    <!-- Año 2025 -->
    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="Ingresar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoCircular" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="2025"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAceptar" />



</androidx.constraintlayout.widget.ConstraintLayout>